@model Recipe

@{
    ViewBag.Title = "Review recipe";
}

<div class="review">
    <form asp-action="RecipeList" method="post">
        <fieldset>
            <legend>Review</legend>
            <table class="review">
                <tr>
                    <th>Name: </th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th><label> Stars: </label></th>
                    <td>
                        <select>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th><label>Comments: </label></th>
                    <td><textarea rows="4" cols="50"></textarea></td>
                </tr>
            </table>
        </fieldset>
        <div class="marginTop">
            <button type="submit">Add review</button>
        </div>
    </form>
</div>

